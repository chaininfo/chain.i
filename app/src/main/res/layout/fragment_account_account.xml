<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

        <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/iv_coin_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="15dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/coin_ups_and_downs"
                    android:layout_toRightOf="@+id/iv_coin_img"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_chain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_account_name"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/coin_one_for_cny"
                    android:layout_toRightOf="@+id/iv_coin_img"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/coin_ups_and_downs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/coin_ups_and_downs_txt"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/coin_ups_and_downs_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="24h"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/coin_one_for_cny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coin_ups_and_downs"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/coin_one_for_cny_txt"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/coin_one_for_cny_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/coin_ups_and_downs"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/item_layout"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:background="@color/line"/>
</RelativeLayout>