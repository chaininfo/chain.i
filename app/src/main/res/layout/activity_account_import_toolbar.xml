<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/account_import_toolbar_height">

    <TextView
        android:id="@+id/tv_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/account_import_toolbar_margin_left"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:textSize="@dimen/account_import_toolbar_text_size"
        android:textColor="@color/white"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="@dimen/account_import_toolbar_text_size"
        android:textColor="@color/white"
        android:text="@string/account_import_text" />

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="@dimen/account_import_toolbar_image_size"
        android:layout_height="@dimen/account_import_toolbar_image_size"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/account_import_toolbar_margin_right"
        android:src="@drawable/scan"/>

</RelativeLayout>