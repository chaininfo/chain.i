<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_toolbar_height">

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/me_toolbar_margin_left"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/me_toolbar_text_size"
        android:textColor="@color/white"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/toolbar_settting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dp"
        android:gravity="center"
        android:textSize="@dimen/me_toolbar_text_size"
        android:textColor="@color/white"
        android:text="@string/setting_text" />
</RelativeLayout>